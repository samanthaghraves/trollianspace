@media (min-width: 324px) {
    .tabs-bar {display: flex;
    width: 785px;
    margin-left: calc(15% + 155px); z-index: 1;
    }
    .columns-area {
    width: calc(70% + 300px);
    margin: -60px auto auto;
    }
    .column {
    display: none;
    }
    .column:last-child {
    display: flex;
    min-width: 800px;
    margin-top: 55px;
    }
}
 
